<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodingCompetitionPlatform</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CodingCompetitionPlatform.styles.css" asp-append-version="true" />

    <!-- header.css -->
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <a class="page-link-button" asp-page="/problems">Problems</a>
        <a class="page-link-button" asp-page="/index">Home</a>
        <a class="page-link-button">Leaderboard</a>
    </header>

    <!-- Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>