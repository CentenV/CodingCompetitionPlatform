@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<script>
    setInterval(function()
    {
        document.getElementById("problems-iframe").contentWindow.location.reload();
    }, 2000);
</script>

<div>@Model.name</div>

<div id="home-container">
    <div id="problem-container">
        <iframe src="/problems" id="problems-iframe" class="live-content"></iframe>
    </div>
</div>
