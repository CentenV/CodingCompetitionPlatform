@page "/login"
@model CodingCompetitionPlatform.Pages.LoginModel
@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="/css/site.css" />
<link rel="stylesheet" type="text/css" href="/css/loginpage.css" />

<div id="login-container">
    <div id="banner">
        <img src="/assets/placeholder.png" id="banner-image"/>
    </div>

    <div id="login-content">
        <div id="login">
            <form method="post" enctype="multipart/form-data">
                <div id="competition-id-field">
                    <input id="competition-id-input" type="text" asp-for="Credential.competitorId" required />
                    <label id="competition-id-input-label" asp-for="Credential.competitorId">Competition ID</label>
                </div>
                <div id="competition-id-field">
                    <input id="competition-id-input" type="password" asp-for="Credential.passphrase" required />
                    <label id="competition-id-input-label" asp-for="Credential.passphrase">Passphrase</label>
                </div>
                <button id="loginButton" type="submit" value="Login">Login</button>
            </form>
            <div id="login-error"></div>
        </div>
            
    </div>

</div>